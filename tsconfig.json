{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",

    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "ponczek/*": ["./src/*"],
      "examples/*": ["./examples/src/*"],
      "*": ["node_modules/*"],
    },
    "resolveJsonModule": true,

    /* Emit */
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,

    /* Interop Constraints */
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    /* Completeness */
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*",
    "examples/src/**/*",
    "examples/scripts/**/*"
  ]
}
