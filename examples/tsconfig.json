{
  "compilerOptions": {
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "ponczek/*": ["../src/*"],
      "examples/*": ["./src/*"],
      "*": ["node_modules/*"],
    },
    "target": "ES2022"
  },
  "include": [
    "src/**/*",
    "../src/**/*",
    "scripts/**/*"
  ]
}
